<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <table id="all_posts" class="table tablesorter">
    <thead>
    <tr>
      <th scope="col"><%= link_to "Title", posts_path(sort: params[:sort] == 'ASC' ? 'DESC' : 'ASC'), class: 'sort_by_title' %></th>
      <th scope="col">Content</th>
      <th scope="col">Author</th>
      <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <%= render post %>
      <% end %>
    </tbody>
  </table>
</div>

<%= will_paginate @posts, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
